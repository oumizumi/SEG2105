<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A1A"
    tools:context=".MainActivity">

    <!-- ImageView for Avatar/Flag with Card Effect -->
    <androidx.cardview.widget.CardView
        android:id="@+id/avatarCard"
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:cardCornerRadius="70dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#8B0000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp">

        <ImageView
            android:id="@+id/avatarImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/flag_ca"
            android:onClick="OnSetAvatarButton"
            android:contentDescription="Team Avatar"
            android:scaleType="centerCrop"
            tools:ignore="OnClick" />
    </androidx.cardview.widget.CardView>

    <!-- Title TextView -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sports Team Manager"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.05"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/avatarCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subtitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage your team profile"
        android:textSize="14sp"
        android:textColor="#B0B0B0"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Team Name Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/teamNameCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#2A2A2A"
        app:layout_constraintTop_toBottomOf="@id/subtitleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/teamNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team Name"
                android:textSize="12sp"
                android:textColor="#8B0000"
                android:fontFamily="sans-serif-medium"
                android:textAllCaps="true"
                android:letterSpacing="0.1" />

            <EditText
                android:id="@+id/teamNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter team name"
                android:textColorHint="#666666"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif"
                android:inputType="text"
                android:background="@android:color/transparent"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                tools:ignore="Autofill" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Team Address Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/teamAddressCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#2A2A2A"
        app:layout_constraintTop_toBottomOf="@id/teamNameCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/addressLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Postal Code"
                android:textSize="12sp"
                android:textColor="#8B0000"
                android:fontFamily="sans-serif-medium"
                android:textAllCaps="true"
                android:letterSpacing="0.1" />

            <EditText
                android:id="@+id/teamAddressTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter postal code"
                android:textColorHint="#666666"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif"
                android:inputType="text"
                android:background="@android:color/transparent"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                tools:ignore="Autofill" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Open Google Maps Button -->
    <Button
        android:id="@+id/openMapsButton"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="OPEN IN GOOGLE MAPS"
        android:onClick="OnOpenInGoogleMaps"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.1"
        android:textSize="14sp"
        android:backgroundTint="#8B0000"
        android:elevation="4dp"
        app:cornerRadius="28dp"
        app:layout_constraintTop_toBottomOf="@id/teamAddressCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        tools:ignore="OnClick" />

</androidx.constraintlayout.widget.ConstraintLayout>